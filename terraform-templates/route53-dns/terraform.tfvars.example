# Example Terraform Variables Configuration
# Copy this file to terraform.tfvars and modify the values according to your needs

# Required Variables
domain_name  = "example.com"
project_name = "my-project"

# Optional Variables
aws_region  = "ap-south-1"
environment = "dev"

# Hosted Zone Configuration
create_hosted_zone        = true
zone_type                = "public"  # public or private
hosted_zone_comment      = "Managed by Terraform - Example Domain"
force_destroy_hosted_zone = false

# VPC Associations (only for private hosted zones)
# vpc_associations = [
#   {
#     vpc_id     = "vpc-12345678"
#     vpc_region = "ap-south-1"
#   }
# ]

# DNS Records Configuration
dns_records = [
  # Basic A record
  {
    name    = "www"
    type    = "A"
    ttl     = 300
    records = ["192.168.1.100"]
  },
  # CNAME record
  {
    name    = "blog"
    type    = "CNAME"
    ttl     = 300
    records = ["www.example.com"]
  },
  # MX record for email
  {
    name    = ""  # Root domain
    type    = "MX"
    ttl     = 300
    records = ["10 mail.example.com"]
  },
  # TXT record for SPF
  {
    name    = ""  # Root domain
    type    = "TXT"
    ttl     = 300
    records = ["v=spf1 include:_spf.google.com ~all"]
  }
  # Example with weighted routing
  # {
  #   name           = "api"
  #   type           = "A"
  #   ttl            = 60
  #   records        = ["1.2.3.4"]
  #   set_identifier = "server-1"
  #   weighted_routing_policy = {
  #     weight = 70
  #   }
  # }
]

