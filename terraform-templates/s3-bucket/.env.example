# Example .env file for S3 Bucket Terraform Template
# Copy this to .env and customize the values

# --- AWS Configuration ---
# Option 1: Use AWS Profile
AWS_PROFILE=default
AWS_REGION=ap-south-1

# Option 2: Use AWS Access Keys (for CI/CD)
# AWS_ACCESS_KEY_ID=AKIA...
# AWS_SECRET_ACCESS_KEY=xxxx
# AWS_DEFAULT_REGION=ap-south-1

# --- S3 Bucket Configuration ---
# Bucket name must be globally unique across all AWS accounts
export TF_VAR_bucket_name="company-email-assets-$(date +%s)"
export TF_VAR_aws_region="ap-south-1"
export TF_VAR_environment="prod"
export TF_VAR_project_name="EmailMarketing"

# --- Bucket Features ---
# Security and Versioning
export TF_VAR_enable_versioning="false"
export TF_VAR_enable_encryption="true"
export TF_VAR_encryption_algorithm="AES256"  # or "aws:kms"
export TF_VAR_kms_key_id=""  # Required if using aws:kms

# Access Control (Private bucket with CloudFront for email assets)
export TF_VAR_enable_public_read="false"  # Always private for email marketing assets
export TF_VAR_enable_cloudfront="true"    # Enable CloudFront for secure global delivery

# Static Website Hosting (not needed for email assets)
export TF_VAR_enable_static_website="false"
export TF_VAR_index_document="index.html"
export TF_VAR_error_document="error.html"

# Lifecycle Management
export TF_VAR_lifecycle_enabled="false"
export TF_VAR_lifecycle_transition_days="30"
export TF_VAR_lifecycle_glacier_days="90"
export TF_VAR_lifecycle_expiration_days="0"  # 0 = no expiration

# CORS Configuration (enable for email marketing assets accessed from web clients)
export TF_VAR_enable_cors="true"

# CloudFront Configuration for Email Marketing Assets
export TF_VAR_cloudfront_price_class="PriceClass_100"  # North America + Europe
export TF_VAR_cloudfront_default_ttl="86400"           # 24 hours cache
export TF_VAR_cloudfront_max_ttl="31536000"            # 1 year max cache
export TF_VAR_cloudfront_compress="true"               # Enable compression